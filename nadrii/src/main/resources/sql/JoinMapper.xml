<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
		PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="JoinMapper">
 	
	<resultMap id="joinSelectMap" type="join">
		<result property="joinNo"			column="join_no"		jdbcType="NUMERIC"/>
		<result property="groupNo"		column="group_no"	jdbcType="NUMERIC"/>
		<result property="userId"			column="user_id"		jdbcType="VARCHAR"/>
		<result property="groupRole"	column="group_role"	jdbcType="NUMERIC"/>	
	</resultMap>
	
	<!-- SQL : INSERT -->
	<insert 	id="addJoin"		parameterType="join" >
	 	INSERT
		INTO join_member ( join_no, group_no, user_id, group_role ) 
		VALUES (	seq_join_member_join_no.nextval, #{groupNo}, #{userId}, #{groupRole} )
	</insert>
	 
	 <!-- SQL : SELECT ONE -->
	<select 	id="getJoin"	parameterType="int"	resultMap="joinSelectMap">
		SELECT
		group_no, group_name, title, text, view_count, lat, lng, category_code, meeting_date, reg_date
		FROM groups
		WHERE group_no = #{value}
	</select>
		
	<delete id="deleteJoin"		parameterType="join">
	 	DELETE FROM join_member
	 	<where>
	 		join_no = #{joinNo}
	 	</where>
	 </delete>
	 
	<!-- SQL : SELECT LIST -->
	<select  id="getJoinList"  parameterType="search"	resultMap="joinSelectMap">
	  	SELECT *
	  	FROM (	SELECT inner_table.* , ROWNUM AS row_seq
	  				FROM		(	SELECT p.prod_no, p.prod_name, p.prod_detail, p.manufacture_day, 
	  										 p.price, p.image_file, p.reg_date, t.tran_status_code 
									FROM group p, transaction t 
									WHERE p.prod_no=t.prod_no(+) 
									<if test="searchCondition != null">
										<if test="searchCondition == 0 and searchKeyword !='' ">
											AND p.prod_no = #{searchKeyword}
										</if>
										<if test="searchCondition == 1 and searchKeyword !='' ">
											AND p.prod_name LIKE '%${searchKeyword}%'
										</if>
										<if test="searchCondition == 2 and searchKeyword !='' ">
											AND p.price = #{searchKeyword}
										</if>
									</if>
									
									<if test="code != null">
										<if test="code == 0">
											AND t.tran_status_code IS NULL
										</if>
										<if test="code == 1">
											AND t.tran_status_code=1
										</if>
										<if test="code == 2">
											AND t.tran_status_code=2
										</if>
										<if test="code == 3">
											AND t.tran_status_code=3
										</if>
									</if>
									<if test="code == 9">
									</if>
									
									<if test="sort != null">								
										<if test="sort == 'priceASC'">
											ORDER BY p.price ASC
										</if>
										<if test="sort == 'priceDESC'">
											ORDER BY p.price DESC
										</if>
										<if test="sort == 'old'">
											ORDER BY p.reg_date ASC
										</if>
										<if test="sort == 'recent'">
											ORDER BY p.reg_date DESC
										</if>
									</if>
									) inner_table
					WHERE ROWNUM &lt;= #{endRowNum} )
		WHERE row_seq BETWEEN #{startRowNum} AND #{endRowNum} 
	 </select>
	 	<!--  위 두번째 subQuery 의  
	 			WHERE ROWNUM &lt;= #{endRowNum} ) 는
	 			WHERE ROWNUM <= #{endRowNum} ) 의미이며..
	 			< 는 keyword 로 &lt; 를	사용.
	 			
	 			<![CDATA[  ~~~  ]]> 를 이용하여 아래와 같이 사용  할 수 있다.
	 			CDATA ==> Character Data 의 의미 Java 에서 \n 같은 특수문자 처리  

				WHERE ROWNUM <![CDATA[ <=]]> #{endRowNum} )
		-->
	
	<!-- SQL : SELECT ROW Count -->	 
	 <select  id="getTotalCount"  parameterType="search"	 resultType="int">
	  	SELECT COUNT(*)
	  	FROM  (	SELECT p.prod_no, p.prod_name, p.prod_detail, p.manufacture_day, 
	  										 p.price, p.image_file, p.reg_date, t.tran_status_code 
					FROM group p, transaction t 
					WHERE p.prod_no=t.prod_no(+) 
					<if test="searchCondition != null">
						<if test="searchCondition == 0 and searchKeyword !='' ">
							AND p.prod_no = #{searchKeyword}
						</if>
						<if test="searchCondition == 1 and searchKeyword !='' ">
							AND p.prod_name LIKE '%${searchKeyword}%'
						</if>
						<if test="searchCondition == 2 and searchKeyword !='' ">
							AND p.price = #{searchKeyword}
						</if>
					</if>	
					
					<if test="code != null">
						<if test="code == 0">
							AND t.tran_status_code IS NULL
						</if>
						<if test="code == 1">
							AND t.tran_status_code=1
						</if>
						<if test="code == 2">
							AND t.tran_status_code=2
						</if>
						<if test="code == 3">
							AND t.tran_status_code=3
						</if>
					</if>
			
					<if test="sort != null">	
						<if test="sort == 'priceASC'">
							ORDER BY p.price ASC
						</if>
						<if test="sort == 'priceDESC'">
							ORDER BY p.price DESC
						</if>
						<if test="sort == 'recent'">
							ORDER BY p.reg_date DESC
						</if>
					</if>
					 ) countTable				
							
	 </select>
	 
</mapper>